<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user, class: 'js-user-profile-link' %>
  <span class='badge microposts-count'><%= user.microposts.count %></span>
  <% if current_user.admin? && !current_user_is(user) %>
    | <%= link_to "delete", user, method: :delete, class: 'js-delete-user',
          data: { confirm: "Are you sure you want to delete the user '#{user.name}'?" } %>
  <% end %>
</li>
