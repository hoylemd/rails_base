<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <span id='user_name'><%= @user.name %></span>
      </h1>
      <% if current_user == @user %>
        <%= link_to "Edit", edit_user_path(current_user) %>
      <% end %>
    </section>
  </aside>
</div>
